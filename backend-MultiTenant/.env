# -------------------------
# Core App Settings
# -------------------------

# MongoDB connection string
MONGO_URI= mongodb://localhost:27017/swadsetuMultiTenantDB

# Secret for JWT signing/verification
JWT_SECRET=super_secret_jwt_key_here




# -------------------------
# Security & Crypto
# -------------------------

# bcrypt salt rounds (higher = stronger but slower)
BCRYPT_ROUNDS=10

# Override token TTL in minutes (for staff manager override PINs)
OVERRIDE_TOKEN_TTL_MIN=10

# -------------------------
# Session / Orders / Bills
# -------------------------

# Default session TTL (ms) â€” how long a table session stays alive
SESSION_TTL_MS=3600000  # 1 hour

# -------------------------
# Redis / Pub-Sub
# -------------------------
# If using real Redis in production, point here.
# For dev, the in-memory stub will be used automatically.
REDIS_URL=redis://127.0.0.1:6379

# -------------------------
# Server Settings
# -------------------------

# Express app port
PORT=5000

# Environment mode
NODE_ENV=development

# -------------------------
# Logging
# -------------------------

# Log level: error, warn, info, debug
LOG_LEVEL=info

# -------------------------
# Cloudinary Settings
# -------------------------
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret